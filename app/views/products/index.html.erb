<div class="main">
  <div class="container">
    <div class="row">
      <div class="col-md-9">
        <div class="panel panel-default">
          <div class="panel-body">
            <table class="table table-default">
              <thead>
                <tr>
                  <td>图片</td>
                  <td>ID</td>
                  <td>标题</td>
                  <td>价格</td>
                  <td>封禁</td>
                  <td>删除</td>
                </tr>
              </thead>
              <tbody>
              <% @products.each do |product| %>
                <tr>
                  <td><%= image_tag product.avatar.url, class: 'product_image' %></td>
                  <td><%= product.id %></td>
                  <td><%= product.title %></td>
                  <td><%= product.price %></td>
                  <td><%= link_to product.status ? '封禁' : '解封', products_setstatus_path(product) %></td>
                  <td><%= link_to '删除', product_path(product), method: :delete, data: {confirm: '你确定删除吗?'} %></td>
                </tr>  
              <% end %>  
              </tbody>
            </table>
            <div class="table-paginate">
              <%= paginate @products %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
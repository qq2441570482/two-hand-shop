<div class="main">
  <div class="container">
    <div class="row">
      <div class="col-md-3">
      	<div class="panel panel-default">
      	  <div class="panel-body">
      		<ul>
      		  <li>
      		  	<%= link_to '出售的所有物品', user_products_path %>
      		  </li>
      		</ul>
      	  </div>
      	</div>
      </div>
      <div class="col-md-9">
        <div class="panel panel-default">
          <div class="panel-body">
          	<%= form_for @product, :html => {class: 'form-horizontal'} do |f| %>
          	  <div class="form-group">
			   <%= f.label '标题', class: 'col-md-2 control-label' %>
                 <div class="col-md-8">
                 	<%= f.text_field :title, class: 'form-control' %>
                 </div>
               </div>

               <div class="form-group">
                 <%= f.label '类别', class: 'col-md-2 control-label' %>
                 <div class="col-md-8">
                 	<%= select_tag :category, options_from_collection_for_select(@categories, 'id','name'), :class => 'form-control' %>
                 </div>
               </div>

               <div class="form-group">
                 <%= f.label '价格', class: 'col-md-2 control-label' %>
                 <div class="col-md-8">
                 	<%= f.text_field :price, class: 'form-control' %>
                 </div>
               </div>

               <div class="form-group">
               	 <%= f.label '图片', class: 'col-md-2 control-label' %>
               	 <div class="col-md-8">
                 	<%= f.file_field :avatar, class: 'form-control' %>
                 </div>
               </div>
                 
               <div class="form-group">
              	<%= f.label '描述', class: 'col-md-2 control-label' %>
                <div class="col-md-8">
                 	<%= f.text_area :description, class: 'form-control', rows: 5 %>
                 </div>
               </div>
				
			   <div class="form-group">
                 <div class="col-md-offset-2 col-md-8">
                 	<%= f.submit '提交', class: 'btn btn-danger btn-block'%>
                 </div>
               </div>    	
			<% end %>
          </div>
        </div>	
      </div>	
    </div>
  </div>
</div>
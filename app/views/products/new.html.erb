<% content_for :title do %>添加商品<% end %> 
<div class="main">
  <div class="container">
    <div class="row">
      <div class="col-md-3">
    		<div class="list-group">
    		  <%= link_to '出售的所有物品', user_products_path, class: 'list-group-item' %>
    		</div>
      </div>
      <div class="col-md-9">
        <div class="panel panel-default">
          <div class="panel-body">
          	<%= form_for @product, :html => {class: 'form-horizontal'} do |f| %>
          	  <div class="form-group">
			           <%= f.label '标题', class: 'col-md-2 control-label' %>
                 <div class="col-md-8">
                 	<%= f.text_field :title, class: 'form-control' %>
                   <% if @product.errors[:title].any? %>
                   <span class="glyphicon glyphicon-exclamation-sign errors" aria-hidden="true"></span><%= label_tag '', @product.errors[:title][0], class: 'control-label errors' %>
                   <% end %>
                 </div>
               </div>

               <div class="form-group">
                 <%= f.label '类别', class: 'col-md-2 control-label' %>
                 <div class="col-md-8">
                 	<%= select_tag :category, options_from_collection_for_select(@categories, 'id','name'), :class => 'form-control' %>
                 </div>
               </div>

               <div class="form-group">
                 <%= f.label '价格', class: 'col-md-2 control-label' %>
                 <div class="col-md-8">
                 	<%= f.text_field :price, class: 'form-control' %>
                  <% if @product.errors[:price].any? %>
                   <span class="glyphicon glyphicon-exclamation-sign errors" aria-hidden="true"></span><%= label_tag '', @product.errors[:price][0], class: 'control-label errors' %>
                   <% end %>
                 </div>
               </div>

               <div class="form-group">
               	 <%= f.label '图片', class: 'col-md-2 control-label' %>
               	 <div class="col-md-8">
                 	<%= f.file_field :avatar, class: 'form-control' %>
                   <% if @product.errors[:avatar].any? %>
                   <span class="glyphicon glyphicon-exclamation-sign errors" aria-hidden="true"></span><%= label_tag '', @product.errors[:avatar][0], class: 'control-label errors' %>
                   <% end %>
                 </div>
               </div>
                 
               <div class="form-group">
              	<%= f.label '描述', class: 'col-md-2 control-label' %>
                <div class="col-md-8">
                 	<%= f.text_area :description, class: 'form-control', rows: 5 %>
                  <% if @product.errors[:description].any? %>
                   <span class="glyphicon glyphicon-exclamation-sign errors" aria-hidden="true"></span><%= label_tag '', @product.errors[:description][0], class: 'control-label errors' %>
                   <% end %>
                 </div>
               </div>
				
			   <div class="form-group">
                 <div class="col-md-offset-2 col-md-8">
                 	<%= f.submit '提交', class: 'btn btn-danger btn-block'%>
                 </div>
               </div>    	
			<% end %>
          </div>
        </div>	
      </div>	
    </div>
  </div>
</div>
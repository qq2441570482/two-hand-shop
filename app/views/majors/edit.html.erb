<div class="main">
  <div class="container">
    <div class="row">
    <div class="col-md-3">
      <div class="panel panel-default">
        <div class="panel-body">
          <ul>
            <li><%= link_to '所有专业', majors_path %></li>
            <li><%= link_to '新增专业', new_major_path %></li>
          </ul>
        </div>
      </div>
    </div>
      <div class="col-md-9">
        <div class="panel panel-default">
          <div class="panel-body">
            <%= form_for @major, html: {class: 'form-horizontal'}  do |f| %>
              <div class="form-group">
                <%= f.label '名称', class: 'col-md-2 control-label' %>
                <div class="col-md-8">
                  <%= f.text_field :name, class: 'form-control' %>
                </div>
              </div>
              <div class="form-group">
                <div class="col-md-offset-2 col-md-8">
                  <%= f.submit '提交', class: 'btn btn-danger btn-block' %>
                </div>
              </div>
            <% end %> 
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
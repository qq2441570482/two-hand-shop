<div class="main">
  <div class="container">
	<div class="rows">
	  <%= render 'shared/user' %>	
	  <div class="col-md-10">
	    <div class="panel panel-default">
		  <div class="panel-body">

		    <div class="col-md-3 user_col-md-3">
		      <%= image_tag @user.avatar.url(:thumb), class: 'person_image  ' %>
		    </div>

		    <div class="col-md-9">
		      <% if flash[:errors] %>
		      <div class="row">
		        <div class="col-md-9">
		          <div class="alert alert-danger">
                    <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span><%= flash[:errors] %>
                  </div>
                </div>	
              </div>
		      <% end %>
		      <%= form_for @user, :url => {:action => :confirmuploadpicture}, :html => {:class => 'form-horizontal'} do |f| %>
		      <div class="form-group">
		        <div class="col-md-9">
                  <%= f.file_field :avatar, class: 'form-control' %>
		        </div>
              </div>

		      <div class="form-group">
		        <div class="col-md-9">
		          <%= f.submit '上传头像', class: 'btn btn-danger btn-block' %>
		        </div>
              </div>
		      <% end %>	
		    </div>
		  </div>
	    </div>
	  </div>  
	</div>
  </div>
</div>
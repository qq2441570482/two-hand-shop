<% content_for :title do %>登录<% end %> 
<div class="main">
  <div class="row">
    <div class="col-md-offset-3 col-md-4">
      <div class="panel panel-default">
        <div class="panel-body">
          <% if flash[:errors] %>
           <div class="alert alert-danger">
             <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span><%= flash[:errors] %>
           </div>
          <% end %>
            <%= form_for @user, :url => {:action => :auth} do |f|%>
              <div class="form-group">
                <%= f.email_field :email,placeholder: '请输入邮箱', class: 'form-control' %>
              </div>
              <div class="form-group">
                <%= f.password_field :password,placeholder: '请输入密码', class: 'form-control' %>
              </div>
              <div class="form-group">
                <%= f.submit '登录', class: 'btn btn-danger btn-block' %>
              </div>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

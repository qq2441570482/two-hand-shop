<div class="main">
  <div class="row">
    <div class="col-md-offset-4 col-md-4">
      <div class="panel panel-default">
        <div class="panel-body">
            <%= form_tag  auth_path  do %>
              <div class="form-group">
                <%= text_field_tag :username, '',placeholder: '请输入用户名', class: 'form-control' %>
              </div>
              <div class="form-group">
                <%= password_field_tag :password, '',placeholder: '请输入密码', class: 'form-control' %>
              </div>
              <div class="form-group">
                <%= submit_tag '登录', class: 'btn btn-danger btn-block' %>
              </div>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
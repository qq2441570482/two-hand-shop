<% content_for :title do %>管理员注册<% end %> 
<div class="main">
  <div class="container">
    <div class="row">
    <div class="col-md-3">
      <div class="panel panel-default">
        <div class="panel-body">
          <ul>
            <li><%= link_to '所有用户', users_path %></li>
          </ul>
        </div>
      </div>
    </div>
      <div class="col-md-9">
        <div class="panel panel-default">
          <div class="panel-body">
            <%= form_for @user, html: {class: 'form-horizontal'} do |f| %>
              <div class="form-group">
                <%= f.label '姓名', class: 'col-md-2 control-label' %>
                <div class="col-md-8">
                  <%= f.text_field :username, class: 'form-control' %>
                </div>
              </div>

              <div class="form-group">
                <%= f.label '邮箱', class: 'col-md-2 control-label' %>
                <div class="col-md-8">
                  <%= f.text_field :email, class: 'form-control' %>
                </div>
              </div>
              
              <div class="form-group">
              <%= f.label '年级', :class => 'col-md-2 control-label' %>
                <div class="col-md-8">
                  <% if @user.grade %>
                     <%= select_tag :grade, options_from_collection_for_select(@grades, 'id', 'name',@user.grade_id), :class => 'form-control' %>
                  <% else %>
                     <%= select_tag :grade, options_from_collection_for_select(@grades, 'id', 'name'), :class => 'form-control' %>
                  <% end %>        
                </div>    
              </div>  

              <div class="form-group">
                <%= f.label '专业', :class => 'col-md-2 control-label' %>
                <div class="col-md-8">
                  <% if @user.major %>
                    <%= select_tag :major, options_from_collection_for_select(@majors,'id','name',@user.major_id), :class => 'form-control' %>
                  <% else %>
                    <%= select_tag :major, options_from_collection_for_select(@majors,'id','name'), :class => 'form-control' %>
                  <% end %>       
                </div>    
              </div>

              <div class="form-group">
                <div class="col-md-offset-2 col-md-8">
                  <%= f.submit '提交', class: 'btn btn-danger btn-block' %>
                </div>
              </div>
            <% end %> 
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="main">
	<div class="container">
		<div class="rows">
			<%= render 'shared/user' %>	
			<div class="col-md-10">
				<div class="panel panel-default">
					<div class="panel-body">
						<%= form_for :user, :html => {:class => 'form-horizontal'} do |f| %>
							<div class="form-group">
								<%= f.label '昵称', class: 'col-md-2 control-label' %>
								<div class="col-md-8">
									<%= f.text_field :username, class: 'form-control' %>	
								</div>		
							</div>
							<div class="form-group">
								<%= f.label '专业', class: 'col-md-2 control-label' %>
								<div class="col-md-8">
									 <%= select_tag :catalogs, :class => 'form-control' %>	
								</div>		
							</div>
						<% end %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<div class="main">
  <div class="container">
	<div class="rows">
	  <%= render 'shared/user' %>	
	  <div class="col-md-10">
	  <div class="panel panel-default">
		<div class="panel-body">
		  <%= form_for @user, :url => {:action => :confirmchangeprofile}, :html => {:class => 'form-horizontal'} do |f| %>
			<div class="form-group">
			  <%= f.label '姓名', :class => 'col-md-2 control-label' %>
			  <div class="col-md-8">
				  <%= f.text_field :username, :class => 'form-control' %>
			  </div>		
			</div>
			  
		    <div class="form-group">
			  <%= f.label '年级', :class => 'col-md-2 control-label' %>
			  <div class="col-md-8">
			    <% if @user.grade %>
			       <%= select_tag :grade, options_from_collection_for_select(@grades, 'id', 'name',@user.grade_id), :class => 'form-control' %>
			    <% else %>
			       <%= select_tag :grade, options_from_collection_for_select(@grades, 'id', 'name'), :class => 'form-control' %>
			    <% end %>			   
			  </div>		
		    </div>	

			<div class="form-group">
			  <%= f.label '专业', :class => 'col-md-2 control-label' %>
			  <div class="col-md-8">
			  	<% if @user.major %>
			  	  <%= select_tag :major, options_from_collection_for_select(@majors,'id','name',@user.major_id), :class => 'form-control' %>
			  	<% else %>
			  	  <%= select_tag :major, options_from_collection_for_select(@majors,'id','name'), :class => 'form-control' %>
			  	<% end %>				
			  </div>		
			</div>

			<div class="form-group">
              <%= f.label '性别', :class => 'col-md-2 control-label' %>
              <div class="col-md-8">
                <%= f.radio_button :gender , "true" %>
                <%= f.label '男', class: 'control-label' %>
                &nbsp &nbsp
                <%= f.radio_button :gender, "false" %>
                <%= f.label '女', class: 'control-label' %>
              </div>
            </div>

			<div class="form-group">
			  <%= f.label '电话', :class => 'col-md-2 control-label' %>
			  <div class="col-md-8">
				<%= f.text_field :phone, class: 'col-md-2 form-control' %>
				<% if @user.errors[:phone].any? %>
			      <span class="glyphicon glyphicon-exclamation-sign errors" aria-hidden="true"></span><%= label_tag '', @user.errors[:phone][0], class: 'control-label errors' %>	
			    <% end %>	
			  </div>
			</div>
			<div class="form-group">
			  <%= f.label '联系地址', :class => 'col-md-2 control-label' %>
			  <div class="col-md-8">
				<%= f.text_field :address, class: 'col-md-2 form-control' %>
			  </div>		
			</div>

           

            <div class="form-group">
              <div class="col-md-offset-2 col-md-8">
                <%= f.submit '提交', class: 'btn btn-danger btn-block' %>
              </div>
            </div>
			<% end %>
		  
		  </div>
		</div>
	  </div>
	</div>
  </div>
</div>
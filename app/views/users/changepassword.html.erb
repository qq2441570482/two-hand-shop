<div class="main">
  <div class="container">
	<div class="rows">
	  <%= render 'shared/user' %>	
	  <div class="col-md-10">
	    <div class="panel panel-default">
		  <div class="panel-body">
		   	<% if flash[:password_errors] %>
		   	  <div class="row">
		   	    <div class="col-md-offset-2 col-md-8">
		          <div class="alert alert-danger">
                    <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span><%= flash[:password_errors] %>
                  </div>
                </div>
		      </div>
		    <% end %>
		    <%= form_for :user, :url => {:action => :confirmchangepassword}, :html => {:class => 'form-horizontal'} do |f| %>
			<div class="form-group">
			  <%= f.label '原密码', :class => 'col-md-2 control-label' %>
			  <div class="col-md-8">
				  <%= f.password_field :oldpassword, class: 'form-control' %>
			  </div>
            </div>

            <div class="form-group">
			  <%= f.label '新密码', :class => 'col-md-2 control-label' %>
			  <div class="col-md-8">
				  <%= f.password_field :password, class: 'form-control' %>
			  </div>
            </div>

            <div class="form-group">
			  <%= f.label '确认密码', class: 'col-md-2 control-label' %>
			  <div class="col-md-8">
				  <%= f.password_field :password_confirmation, :class => 'form-control' %>
			  </div>
            </div>

            <div class="form-group">
              <div class="col-md-offset-2 col-md-8">
            	<%= f.submit '提交', class: 'btn btn-danger btn-block' %>		
              </div>
            </div>
		    <% end %>
		  </div>
	    </div>
	  </div>  
	</div>
  </div>
</div>
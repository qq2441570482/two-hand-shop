<div class="main">
  <div class="container">
	<div class="rows">
	  <%= render 'shared/user' %>	
	  <div class="col-md-10">
	    <div class="panel panel-default">
		  <div class="panel-body">
		    <%= form_for @user, :url => {:action => :sendverifyemail}, :html => {:class => 'form-horizontal'} do |f| %>
		      <div class="form-group">
		        <%= f.label '您的绑定邮箱为：' ,class: 'control-label col-md-2' %>
		        <div class="col-md-8">
                  <%= f.text_field :email, disabled: true, class: 'form-control' %>
		        </div>
              </div>

		      <div class="form-group">
		        <div class="col-md-offset-2 col-md-8">
		          <%= f.submit '发送验证邮箱', class: 'btn btn-danger btn-block' %>
		        </div>
              </div>
		    <% end %>
		  </div>
	    </div>
	  </div>  
	</div>
  </div>
</div>
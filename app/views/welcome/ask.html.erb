<div class="main">
  <div class="container">
	<div class="row">
	 
	  <div class="col-md-9">
		<div class="panel panel-default">
		  <div class="panel-heading">
		  	<h3>求购专区</h3>
		  </div>
		  <div class="panel-body">
		    <ul class="list-group">
		      <% @information_users.each do |information_user| %>
		        <li class="list-group-item">
		        	<div>
		        		<%= information_user.information.title %>
		        	</div>
		        	<div>
		        		<%= information_user.information.description %>
		        	</div>
		        	<div>
		        		联系人:<%= information_user.user.username %><br>
		        		联系电话:<%= information_user.user.phone %>
		        	</div>
		        </li>
		      <% end %>
		    </ul>
		  </div>
		</div>
	  </div>
	</div>
  </div>
</div>
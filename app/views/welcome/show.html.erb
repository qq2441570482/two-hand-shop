<div class="main">
  <div class="container">
	<div class="row">
	  <div class="col-md-4">
		<%= image_tag @product.avatar.url, class: 'img-rounded' %>
	  </div>
			
	  <div class="col-md-6">
	    <div>
	      <%= @product.title %>	
	    </div>
	    <div>
	      卖家: <%= @product.users[0].username%><br>
	      专业: <%= @product.users[0].major.name %><br>
	      手机: <%= @product.users[0].phone %><br>
	      邮箱: <%= @product.users[0].email %>
	    </div>
	  </div>
	</div>
  </div>
</div>
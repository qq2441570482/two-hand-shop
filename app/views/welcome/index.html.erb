<div class="main">
  <div class="container">
    <div class="row">
      <div class="col-md-2">
       
          <div class="list-group">
            <% @categories.each do |catagory| %>
              <%= link_to catagory.name, {:condition => catagory.id}, class: 'list-group-item' %>
            <% end %>
          </div>
      </div>
      
      <div class="col-md-10">
      <% @products.each do |product| %>
        <div class="col-md-3">
          <div class="panel panel-default">
            <div class="panel-body">
               <%= link_to show_path(product), class: 'thumbnail' do %>
                <%= image_tag product.avatar.url %>
              <% end %>
              <div>
                <%= product.title %>                
              </div>
              <div>
                <%= product.description %>
              </div>  
            </div>
          </div>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>

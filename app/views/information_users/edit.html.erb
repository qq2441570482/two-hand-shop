<div class="main">
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <div class="list-group">
          <%= link_to '已发布的求购消息', information_users_path, class: 'list-group-item' %>
          <%= link_to '新增求购消息', new_information_path, class: 'list-group-item' %>
        </div>
      </div>
      <div class="col-md-9">
        <div class="panel panel-default">
          <div class="panel-body">
            <%= form_for @information_user, :html => {:class => 'form-horizontal'} do |f| %>
              <%= f.fields_for :information, @information_user.information do |i| %>
                <div class="form-group">
                <%= i.label '标题', class: 'col-md-2 control-label' %>
                <div class="col-md-8">
                  <%= i.text_field :title, class: 'form-control' %>
                  <% if @information_user.information.errors[:title].any? %>
                   <span class="glyphicon glyphicon-exclamation-sign errors" aria-hidden="true"></span><%= label_tag '', @information_user.information.errors[:title][0], class: 'control-label errors' %>
                  <% end %>
                </div>
              </div>

              <div class="form-group">
                <%= i.label '类别', class: 'col-md-2 control-label'%>
                <div class="col-md-8">
                  <%= select_tag :category, options_from_collection_for_select(@categories, 'id','name', @information_user.information.category_id), :class => 'form-control' %>  
                </div>                  
              </div>

              <div class="form-group">
                <%= i.label '价格', class: 'col-md-2 control-label' %>
                <div class="col-md-8">
                  <%= i.text_field :price, class: 'form-control' %>
                  <% if @information_user.information.errors[:price].any? %>
                   <span class="glyphicon glyphicon-exclamation-sign errors" aria-hidden="true"></span><%= label_tag '', @information_user.information.errors[:price][0], class: 'control-label errors' %>
                  <% end %>
                </div>
              </div>

              <div class="form-group">
                <%= i.label '描述', class: 'col-md-2 control-label' %>
                <div class="col-md-8">
                  <%= i.text_area :description, class: 'form-control', rows: 5 %>
                  <% if @information_user.information.errors[:description].any? %>
                   <span class="glyphicon glyphicon-exclamation-sign errors" aria-hidden="true"></span><%= label_tag '', @information_user.information.errors[:description][0], class: 'control-label errors' %>
                  <% end %>
                </div>
              </div>

              <div class="form-group">
                 <div class="col-md-offset-2 col-md-8">
                  <%= i.submit '提交', class: 'btn btn-danger btn-block'%>
                 </div>
               </div>    
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>